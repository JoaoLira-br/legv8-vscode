{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "LEGv8",
	"patterns": [
		{
			"include": "#comment"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#op"
		},
		{
			"include": "#branch"
		},
		{
			"include": "#branchCond"
		},
		{
			"include": "#label"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.legv8",
				"match": "\\b(if|while|for|return)\\b"
			}]
		},
		"registers": {
			"patterns": [{
				"name": "variable.legv8",
				"match": "\\b(X0|X1|X2|X3|X4|X5|X6|X7|X8|X9|X10|X11|X12|X13|X14|X15|X16|X17|X18|X19|X20|X21|X22|X23|X24|X25|X26|X27|X28|X29|X30|XZR|SP|LR)\\b"
			}]
		},
		"literal": {
			"name": "constant.numeric",
			"match": "( #[0-9]+\\b|#0x[0-9]+|#0b[0-1]+)"
		},
		"op": {
			"patterns": [{
				"begin": "\\b^(ADD|ADDI|ADDIS|ADDIS|AND|ANDI|ANDIS|BR|EOR|EORI|LDUR|LDURB|LDURH|LDURSW|LDXR|LSL|LSR|MOVK|MOVZ|ORR|ORRI|STUR|STURB|STURH|STURW|STXR|SUB|SUBI|SUBIS|SUBS|FADDS|FADDD|FCMPS|FCMPD|FDIVS|FDIVD|FMULS|FMULD|FSUBS|FSUBD|LDURS|LDURD|MUL|SDIV|SMULH|STURS|STURD|UDIV|UMULH|DUMP|PRNT|HALT)\\b",
				"end": "$",
				"beginCaptures": {"0": {"name": "keyword.control.legv8"}},
				"patterns": [{"include": "#registers"}, {"include": "#literal"}, {"include": "#comment"}]
			}]
		},
		"branch": {
			"begin": "\\b^B\\.(EQ|NE|HS|LO|MI|PL|VS|VC|HI|LS|GE|LT|GT|LE)?\\b",
			"end": "$",
			"beginCaptures": {"0": {"name": "keyword.control.legv8"}},
			"patterns": [{"include": "#branchLabel"}, {"include": "#comment"}]
		},
		"branchCond": {
			"begin": "\\b^(CBZ|CBNZ)\\b",
			"end": "$",
			"beginCaptures": {"0": {"name": "keyword.control.legv8"}},
			"patterns": [{"include": "#registers"}, {"include": "#branchLabel"}, {"include": "#comment"}]
		},
		"label": {
			"name": "entity.name.tag",
			"match": "\\b^([a-z]|[A-Z]|_)+:$"
		},
		"branchLabel": {
			"name": "entity.name.tag",
			"match": "\\b([a-z]|[A-Z]|_)+\\b"
		},
		"comment": {
			"name": "comment.legv8",
			"begin": "\\//",
			"end": "$"
		},
		"group": {
			"begin": "\\[",
			"end": "\\]",
			"patterns": [{"include": "#registers"}, {"include": "#literal"}]
		},
		"strings": {
			"name": "string.quoted.double.legv8",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.legv8",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.legv8"
}